<h1>All articles details</h1>
<div class="container text-center">
<% @articles.each do |article| %>
    <div class="card mt-4">
        <div class="card-header">
            <%= article.user.username if article.user %>
            <small>Created at <%= time_ago_in_words(article.created_at)%> ago </small>
            <small>Updated at <%= time_ago_in_words(article.updated_at)%> ago </small>
        </div>
        <div class="card-body">
            <a href="#" class="btn btn-primary">Go somewhere</a>
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.description, length: 10) %></p>
        </div>
        <div class="card-header">
            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                <button type="button" class="btn btn-danger"><%= link_to 'Delete', article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></button>
                <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_article_path(article) %></button>
                <button type="button" class="btn btn-success"><%= link_to 'Show', article_path(article) %></button>
            </div>
        </div>

    </div>
<% end %>
</div>

<p>
    <%= link_to 'Create_new_article', new_article_path %>
</p>